@{
    ViewData["Title"] = "Dashboard";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-12">
            <div class="card shadow-sm">
                <div class="card-header bg-success text-white">
                    <h2 class="display-4">Hello, Admin!</h2>
                </div>
                <div class="card-body">
                    <p class="lead mb-1 mt-3">
                        This is your administrator area - you can <b>read</b>, <b>create</b>, <b>delete</b> and <b>edit</b> Fitness classes.
                    </p>
                    <p class="lead mt-1">
                        You can also see <b>all users and instructors</b>, <b>all bookings</b>, and <b>all reviews</b> in the system.
                    </p>
                    <hr class="my-4">
                    <div class="d-flex justify-content-center flex-wrap">
                        <a asp-area="" asp-controller="FitnessClass" asp-action="All" class="btn btn-custom btn-lg mx-2 mb-3">
                            All Fitness Classes
                        </a>
                        <a asp-area="" asp-controller="FitnessClass" asp-action="Add" class="btn btn-custom btn-lg mx-2 mb-3">
                            Add Fitness Class
                        </a>
                        <a asp-area="Admin" asp-controller="Review" asp-action="All" class="btn btn-custom btn-lg mx-2 mb-3">
                            All Reviews
                        </a>
                        <a asp-area="Admin" asp-controller="Booking" asp-action="All" class="btn btn-custom btn-lg mx-2 mb-3">
                            All Bookings
                        </a>
                        <a asp-area="Admin" asp-controller="User" asp-action="All" class="btn btn-custom btn-lg mx-2 mb-3">
                            All Users
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    /* Custom CSS to match the previous theme */
    .btn-custom {
        background-color: #198754; /* Custom green shade */
        color: white;
        border: none;
    }

        .btn-custom:hover {
            background-color: #145c32; /* Darker green on hover */
        }

    .card {
        border-radius: 8px;
    }

    .card-header {
        border-radius: 8px 8px 0 0;
    }

    .card-body {
        background-color: #f8f9fa;
    }
</style>
