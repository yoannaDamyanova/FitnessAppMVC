@model IEnumerable<BookingViewModel>
@{
    ViewBag.Title = "All Bookings";
}
<h2 class="text-center">@ViewBag.Title</h2>
<hr />
<div class="row">
    @foreach (var booking in Model)
    {
        <div class="col-lg-4 col-md-6 col-sm-12">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title">Booking Details</h4>
                </div>
                <div class="card-body">
                    <h5 class="card-title">Fitness Class: @booking.FitnessClassTitle</h5>
                    <p class="card-text"><strong>Booker Name:</strong> @booking.BookerName</p>
                    <p class="card-text"><strong>Instructor:</strong> @booking.InstructorFullName</p>
                    <p class="card-text"><strong>Booking Date:</strong> @booking.BookingDate</p>
                </div>
            </div>
        </div>
    }
</div>
