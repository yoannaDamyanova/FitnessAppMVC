@model IEnumerable<BookingViewModel>
@{
    ViewBag.Title = "All Bookings";
}
<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<div class="row">
    @foreach (var booking in Model)
    {
        <div class="col-lg-4 col-md-6 col-sm-12 mb-4">
            <div class="card shadow-sm">
                <div class="card-header bg-success text-white">
                    <h5 class="card-title">Booking Details</h5>
                </div>
                <div class="card-body">
                    <h6 class="card-title">Fitness Class: <b>@booking.FitnessClassTitle</b></h6>
                    <p class="card-text"><strong>Booker Name:</strong> @booking.BookerName</p>
                    <p class="card-text"><strong>Instructor:</strong> @booking.InstructorFullName</p>
                    <p class="card-text"><strong>Booking Date:</strong> @booking.BookingDate</p>
                </div>
            </div>
        </div>
    }
</div>

<style>
    /* Custom button styling */
    .btn-custom {
        background-color: #198754; /* Custom green shade */
        color: white;
        border: none;
    }

        .btn-custom:hover {
            background-color: #145c32; /* Darker green on hover */
        }

    .card {
        border-radius: 8px;
    }

    .card-header {
        border-radius: 8px 8px 0 0;
        text-align: center;
    }

    .card-body {
        background-color: #f8f9fa;
    }
</style>
