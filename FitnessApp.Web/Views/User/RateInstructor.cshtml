@model InstructorRateFormModel

@{
    ViewData["Title"] = "Rate Instructor";
}

<h2>@ViewData["Title"]</h2>

<p>Give instructor <strong>@Model.FullName</strong> a rating!</p>

<form method="post" asp-action="RateInstructor" asp-controller="User">
    <div class="form-group">
        <label for="Rating">Rating (1-5):</label>
        <input type="number" id="Rating" name="Rating" class="form-control" min="1" max="5" step="0.1" value="" required />
    </div>

    <button type="submit" class="btn btn-primary" asp-action="RateInstructor" asp-controller="User" asp-route-Id="@Model.Id">Submit Rating</button>
</form>