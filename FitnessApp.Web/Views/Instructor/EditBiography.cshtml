@model InstructorEditBiographyFormModel

@{
    ViewData["Title"] = "Edit Biography";
}

<h2 class="text-center mb-4">@ViewData["Title"]</h2>

@if (!ViewData.ModelState.IsValid && ViewData.ModelState["Error"] != null)
{
    <div class="alert alert-danger" role="alert">
        @ViewData.ModelState["Error"].Errors.First().ErrorMessage
    </div>
}

<form method="post" asp-action="EditBiography" asp-controller="Instructor" class="mb-4">
    <div class="form-group">
        <label for="Biography" class="font-weight-bold">Biography</label>
        <textarea id="Biography" name="Biography" class="form-control" required rows="6">@Model.Biography</textarea>
        <span asp-validation-for="Biography" class="small text-danger"></span>
    </div>

    <div class="text-center">
        <button type="submit" class=s"btn btn-outline-success">Save</button>
        <a href="@Url.Action("Index", "Home")" class="btn btn-outline-secondary">Cancel</a>
    </div>

</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
