@model FitnessClassDeleteViewModel

@{
    ViewData["Title"] = "Delete Fitness class";
}

<form asp-action="Delete" asp-controller="FitnessClass" method="post">
    <h3>Are you sure you want to delete this class?</h3>
    <p class="mb-3">Title: <b>@Model.Title</b></p>
    <p class ="mb-3">Category: <b>@Model.CategoryName</b></p>
    <p class="mb-3">StartTime: <b>@Model.StartTime</b></p>

    <div class="form-group">
        <input type="hidden" asp-for="@Model.Title" value="@Model.Title" />
        <input type="hidden" asp-for="@Model.Id"  value="@Model.Id" />
        <input type="hidden" asp-for="@Model.CategoryName" value="@Model.CategoryName" />
        <input type="hidden" asp-for="@Model.StartTime" value="@Model.StartTime" />
        <button type="submit" class="btn btn-primary">Delete</button>
    </div>
</form>
