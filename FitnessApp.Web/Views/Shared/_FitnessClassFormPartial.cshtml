@model FitnessClassFormModel

<form method="post">
    <!-- Title Field -->
    <div class="form-group">
        <label asp-for="Title" class="control-label"></label>
        <input asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <!-- Description Field -->
    <div class="form-group">
        <label asp-for="Description" class="control-label"></label>
        <textarea asp-for="Description" class="form-control" rows="3"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <!-- Start Time Field -->
    <div class="form-group">
        <label asp-for="StartTime" class="control-label"></label>
        <!-- Ensure the correct format -->
        <input asp-for="StartTime" class="form-control" value="@Model.StartTime?.ToString()" />
        <span asp-validation-for="StartTime" class="text-danger"></span>
    </div>

    <!-- Duration Field -->
    <div class="form-group">
        <label asp-for="Duration" class="control-label"></label>
        <input asp-for="Duration" class="form-control" type="number" min="30" max="180" step="1" />
        <span asp-validation-for="Duration" class="text-danger"></span>
        <small class="form-text text-muted">Duration must be between 30 and 180 minutes.</small>
    </div>

    <!-- Capacity Field -->
    <div class="form-group">
        <label asp-for="Capacity" class="control-label"></label>
        <input asp-for="Capacity" class="form-control" type="number" />
        <span asp-validation-for="Capacity" class="text-danger"></span>
    </div>

    <!-- Category Dropdown -->
    <div class="form-group">
        <label asp-for="CategoryId"></label>
        <select asp-for="CategoryId" class="form-control">
            @foreach (var category in Model.Categories)
            {
                <option value="@category.Id">@category.Name</option>
            }
        </select>
        <span asp-validation-for="CategoryId" class="small text-danger"></span>
    </div>

    <!-- Hidden Field for Model ID -->
    <div class="form-group">
        <input type="hidden" asp-for="@Model.Id" value="@Model.Id" />
    </div>

    <!-- Submit and Cancel Buttons -->
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Save</button>
        <a href="@Url.Action("Index", "Home")" class="btn btn-secondary">Cancel</a>
    </div>
</form>
